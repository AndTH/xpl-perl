#!/bin/sh
set -e

test "$1" = 'purge' || exit 0

svc -x /etc/sv/xpl-xvkbd || :
rm -rf /etc/sv/xpl-xvkbd
rm -rf /var/lib/supervise/xpl-xvkbd /var/lib/supervise/xpl-xvkbd.log
for i in '@*' current config lock state; do
  rm -f /var/log/xpl-perl/xpl-xvkbd/$i
done
rmdir /var/log/xpl-perl/xpl-xvkbd || :
